// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  engineType = "binary"
}

datasource db {
  provider = "sqlite"
}

enum TaskStatus {
  BACKLOG
  TODO
  DOING
  DONE
}

enum IncidentStatus {
  OPEN
  INVESTIGATING
  MITIGATED
  RESOLVED
}

enum Severity {
  LOW
  MEDIUM
  HIGH
  CRITICAL
}

enum AlertStatus {
  ACTIVE
  ACKED
  RESOLVED
}

enum LogLevel {
  INFO
  WARN
  ERROR
}

model Task {
  id          String     @id @default(cuid())
  title       String
  description String?
  status      TaskStatus @default(BACKLOG)
  priority    Int        @default(3)
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
}

model Incident {
  id          String         @id @default(cuid())
  title       String
  description String?
  status      IncidentStatus @default(OPEN)
  severity    Severity       @default(MEDIUM)
  runbook     String?
  createdAt   DateTime       @default(now())
  updatedAt   DateTime       @updatedAt
  logs        LogEntry[]
  alerts      Alert[]
}

model LogEntry {
  id          String    @id @default(cuid())
  message     String
  level       LogLevel  @default(INFO)
  source      String?
  incidentId  String?
  incident    Incident? @relation(fields: [incidentId], references: [id])
  createdAt   DateTime  @default(now())
}

model Alert {
  id          String      @id @default(cuid())
  title       String
  status      AlertStatus @default(ACTIVE)
  severity    Severity    @default(MEDIUM)
  incidentId  String?
  incident    Incident?   @relation(fields: [incidentId], references: [id])
  triggeredAt DateTime    @default(now())
  resolvedAt  DateTime?
}

model AuditEvent {
  id         String   @id @default(cuid())
  actor      String
  action     String
  entityType String
  entityId   String?
  metadata   Json?
  createdAt  DateTime @default(now())
}

model ReleaseNote {
  id        String   @id @default(cuid())
  version   String
  title     String
  body      String
  createdAt DateTime @default(now())
}
